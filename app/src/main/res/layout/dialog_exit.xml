<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_roundborder_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin18"
        android:layout_marginTop="@dimen/margin27"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dimen_2dp"
        android:paddingLeft="@dimen/margin37"
        android:paddingRight="@dimen/margin37"
        android:text="您确定要退出吗？"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin27"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_exit_false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin15"
            android:layout_marginRight="@dimen/margin10"
            android:layout_weight="1"
            android:background="@drawable/shape_login_cancel"
            android:gravity="center"
            android:padding="@dimen/margin8"
            android:text="@string/dialog_bt_cancle"
            android:textColor="@color/textff5722"
            android:textSize="@dimen/text15" />


        <TextView
            android:id="@+id/dialog_exit_true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin15"
            android:layout_weight="1"
            android:background="@drawable/shape_login_true"
            android:gravity="center"
            android:padding="@dimen/margin8"
            android:text="@string/dialog_bt_sure"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text15" />

    </LinearLayout>


</LinearLayout>