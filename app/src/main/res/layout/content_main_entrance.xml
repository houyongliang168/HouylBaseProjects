<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".入口.MainEntranceActivity"
    tools:showIn="@layout/activity_main_entrance">
    <com.flyco.tablayout.SlidingTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_36dp"
        android:background="@color/colorWhite"
        tl:tl_divider_color="@android:color/transparent"
        tl:tl_divider_padding="0dp"
        tl:tl_divider_width="0dp"
        tl:tl_indicator_color="@color/colorTitle"
        tl:tl_indicator_height="2dp"
        tl:tl_indicator_width="72dp"
        tl:tl_tab_padding="20dp"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/textff5722"
        tl:tl_textUnselectColor="#666666"
        tl:tl_textsize="@dimen/text14" />
    
    
    
    <com.base.widget.viewpager.ControlScrolliewPager
        app:layout_constraintTop_toBottomOf="@+id/tab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/vp_control_srcoll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#f4f4f4">
        ></com.base.widget.viewpager.ControlScrolliewPager>
    

</android.support.constraint.ConstraintLayout>