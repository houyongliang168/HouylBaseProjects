<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >



        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#ff5722"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@android:color/transparent"
                app:statusBarScrim="@android:color/transparent"
                app:titleEnabled="false"
                android:minHeight="@dimen/dimen_50dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >
                <!--app:toolbarId="@+id/toolbar"-->

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">
                    <!---->
                    <android.support.constraint.Guideline
                        android:id="@+id/gl_v1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.5" />


                    <ImageView
                        android:id="@+id/imageView3"

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/iv_error"

                        app:layout_constraintVertical_weight="2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/gl_v1"/>
                    <ImageView
                        android:id="@+id/imageView6"

                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="#ff0000"

                        app:layout_constraintVertical_weight="2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/gl_v1"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.7">
                    <android.support.constraint.Guideline
                        android:id="@+id/gl_v"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.3" />
                    <android.support.constraint.Guideline
                        android:id="@+id/gl_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.75" />
                    <android.support.constraint.Guideline
                        android:id="@+id/gl_l"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.35" />
                    <android.support.constraint.Guideline
                        android:id="@+id/gl_r"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintGuide_percent="0.95" />
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/iv_error"

                        app:layout_constraintVertical_weight="2"
                        app:layout_constraintBottom_toTopOf="@+id/imageView2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/gl_v" />
                    <ImageView

                        android:id="@+id/imageView2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:background="#ff0000"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitStart"

                        app:layout_collapseParallaxMultiplier="0.7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_weight="2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

                    <ImageView
                        android:id="@+id/imageView4"

                        android:background="#ffffff"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/default_iv"
                        app:layout_collapseMode="pin"
                        app:layout_constraintTop_toTopOf="@+id/gl_l"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/margin10"
                        android:layout_marginLeft="@dimen/margin10"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/gl_r" />

                </android.support.constraint.ConstraintLayout>
                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:background="#00ffffff"
                    android:layout_height="@dimen/dimen_50dp"
                    app:layout_collapseMode="pin"
                    app:titleEnabled="false"
                    >
                    <!--app:title="12345664"-->


                    <!--自定义带图片的立即播放按钮-->
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_back"

                        android:gravity="center"
                        android:paddingRight="@dimen/dimen_50dp"
                        />
                    <TextView
                        android:id="@+id/tv"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:text="立即播放"
                        android:layout_gravity="center"
                        android:gravity="center"

                        />
                    <!--自定义带图片的立即播放按钮-->
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_del"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:paddingRight="@dimen/dimen_50dp"
                        />


                </android.support.v7.widget.Toolbar>


            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_scrolling" />

        <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:id="@+id/fab"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="@dimen/fab_margin"-->
        <!--app:layout_anchor="@id/app_bar"-->
        <!--app:layout_anchorGravity="bottom|end"-->
        <!--app:srcCompat="@android:drawable/ic_dialog_email" />-->




</android.support.design.widget.CoordinatorLayout>
