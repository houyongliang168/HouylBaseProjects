<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:minHeight="46dp">


    <android.support.constraint.Guideline
        android:id="@+id/gl_v"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />
    <android.support.constraint.Guideline
        android:id="@+id/gl_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <!--中心点位置-->
    <ImageView
        android:id="@+id/iv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/custom_detail_time_cicle_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/gl_v"
        app:layout_constraintRight_toRightOf="@+id/gl_r"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_below"
        android:layout_width="@dimen/margin4"
        android:layout_height="0dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_one"
        app:layout_constraintStart_toStartOf="@+id/iv_one"
        app:layout_constraintTop_toBottomOf="@+id/iv_one"></View>

    <View
        android:id="@+id/view_up"
        android:layout_width="@dimen/margin4"
        android:layout_height="0dp"
        android:background="@color/coloreeeeee"
        app:layout_constraintBottom_toTopOf="@+id/iv_one"
        app:layout_constraintEnd_toEndOf="@+id/iv_one"
        app:layout_constraintStart_toStartOf="@+id/iv_one"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"></View>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin12"
        android:textColor="@color/colorff5722"
        android:textSize="@dimen/text14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_one"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2017年12月22日（星期五）"></TextView>


</android.support.constraint.ConstraintLayout>


