<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@color/colorf4f4f4">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="消息提示"
        android:textColor="#38ADFF"
        android:textSize="@dimen/text16"
        android:visibility="gone" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="34dp"
        android:lineSpacingExtra="12dp"
        android:text="提示消息"
        android:textColor="@color/color666666"
        android:textSize="@dimen/text16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/base_shape_dialog_cancel"
            android:gravity="center"
            android:text="取消"
            android:padding="@dimen/margin5"
            android:layout_marginRight="@dimen/margin11"
            android:textColor="@color/textff5722"
            android:textSize="@dimen/text16" />

        <Button
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/base_shape_dialog_true"
            android:gravity="center"
            android:text="确定"
            android:padding="@dimen/margin5"
            android:layout_marginLeft="@dimen/margin11"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text16" />
    </LinearLayout>


</RelativeLayout>