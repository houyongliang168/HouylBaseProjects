<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorffffff"
    android:orientation="vertical">
    <!--<View-->
        <!--android:background="@color/coloreeeeee"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/margin1"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_marginLeft="@dimen/margin10"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin15"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_basemodule_startDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/basemodule_bg_filter_date_checked"
            android:gravity="center"
            android:hint="起始日期"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/color999999"
            android:clickable="true"
            android:textSize="@dimen/text15"
            tools:text="2017-11-12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin10"
            android:layout_marginRight="@dimen/margin10"
            android:text="至"
            android:textColor="@color/color666666"
            android:textSize="@dimen/text15" />

        <TextView
            android:id="@+id/tv_basemodule_endDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/basemodule_bg_filter_date_unchecked"
            android:gravity="center"
            android:hint="结束日期"
            android:textColor="@color/colorTitle"
            android:textColorHint="@color/color999999"
            android:textSize="@dimen/text15"
            android:clickable="true"
            tools:text="2017-11-12" />

    </LinearLayout>


    <!--时间选择器容器-->
    <FrameLayout
        android:id="@+id/fl_basemodule_timepicker_container"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="wrap_content">

    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll_basemodule_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dimen_15dp"
        android:paddingTop="@dimen/dimen_15dp">

        <TextView
            android:id="@+id/tv_basemodule_date_reset"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_34dp"
            android:layout_marginLeft="@dimen/margin12"
            android:layout_marginRight="@dimen/margin8"
            android:layout_weight="1"
            android:background="@drawable/base_shape_dialog_cancel"
            android:clickable="true"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/colorfe5722"
            android:textSize="@dimen/text18" />

        <TextView
            android:id="@+id/tv_basemodule_date_confirm"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_34dp"
            android:layout_marginLeft="@dimen/margin8"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:layout_weight="1"
            android:background="@drawable/base_shape_dialog_true"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorffffff"
            android:textSize="@dimen/text18" />

    </LinearLayout>





</LinearLayout>


    <LinearLayout
        android:id="@+id/ll_basemodule_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@color/color80000000"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>